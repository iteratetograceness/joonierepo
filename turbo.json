{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["CONTENTFUL_SPACE_ID", "CONTENTFUL_ACCESS_TOKEN"],
  "globalDependencies": ["**/.env.*local", "tsconfig.json"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", ".svelte-kit/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
